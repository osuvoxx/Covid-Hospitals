
<br>
 
<div class="jumbotron jumbotron-fluid container">
  <div class="container">
    <h1 class="display-4">Sign up</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
 <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :name,  autocomplete: "name",placeholder:"Name" ,class: "form-control", required: "true"%>
  </div>
  <br>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"Email" ,class: "form-control" %>
  </div>
    <br>
  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password" ,placeholder:"Password" ,class: "form-control" %>
    <% if @minimum_password_length %>
    <em style="font-size:13px">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
  </div>
  <br>
  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder:"Confirm Password" ,class: "form-control" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Sign up" %>
    <br>
    <br>
    <%= render "devise/shared/links" %>
  </div>
  <% end %>
  </div>

</div>